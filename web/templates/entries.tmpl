<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="{{ .prefix  }}/static/css/bootstrap.min.css">
  <script src="{{ .prefix }}/static/js/jquery.min.js"></script>
  <script src="{{ .prefix }}/static/js/bootstrap.min.js"></script>

  <style>
  .groupinfo{
    font-size: 80%;
    margin-left: 10px;
  }
  .title{
    background-color: #366;
  }
  hr {
    margin-top: 5px;
    margin-bottom: 5px;    
  }
  h1 {
    margin-top: 5px;
    margin-bottom: 5px;    
    color: #3399ff;
  }
  h2 {
    margin-top: 5px;
    margin-bottom: 5px;    
  }
  </style>

</head>
<body>

{{template "menu.tmpl"}}

<div class="container">
 {{ range $entry := .entries }}
    <div class="row">
      <div class="col-sm-12" id="text">
          <h1>{{ $entry.Title }}</h1>
          {{ $entry.Markdown | markdown }}
          <a id="editbutton-{{ $entry.ID }}" href="#" class="btn btn-default pull-right">Edit</a>
        </div>
      </div>
    <hr />
  {{ end }}

{{ if .error }} 
  <div class="row">
    <div class="col-sm-12">
      <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <h2>{{ .error }}</h2>
      </div>
    </div>
  </div>
{{ end }}

<script>

{{ range $entry := .entries }}
  $( "#editbutton-{{ $entry.ID }}" ).click(function() {
      window.location.href = "{{ $.prefix }}/entries/{{ $entry.ID }}";
  });
{{ end }}

$( "#newbutton" ).click(function() {
  window.location.href = "{{ .prefix }}/newbutton";
  });

</script>

</body>
</html>

